<% content_for :body do %>
  <body class="hold-transition register-page">
<% end %>

<div class="register-box">
  <div class="register-logo">
    <a href="/">流利说<b>Message</b></a>
  </div> 
  <!-- register-logo -->
  <div class="register-box-body">
    <p class="login-box-msg">注册</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group has-feedback">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control"%>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "off", placeholder: "password (6 characters minmum)", class:"form-control" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Retype password (6 characters minmum)", class:"form-control" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="actions">
        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign Up</button>
      </div>
    <% end %>
    <a href="sign_in" class="text-center">already have account? goto sign up</a>
  </div>
</div>

